[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color]
  ui = true

[color "diff"]
  whitespace = red reverse

[core]
  autocrlf = false
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = /usr/bin/vim

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p

[user]
	name = Chad W Pry
	email = chad.pry@gmail.com
[http]
	sslVerify = false

[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = false

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[init]
	defaultBranch = main

[pager]
	branch = false
